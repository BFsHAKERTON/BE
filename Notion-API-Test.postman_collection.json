							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"filter\": {},\n  \"sorts\": []\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/notion/databases/{{databaseId}}/query?userId={{userId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "notion", "databases", "{{databaseId}}", "query"],
							"query": [
								{
									"key": "userId",
									"value": "{{userId}}"
								}
							]
						},
						"description": "Notion 데이터베이스를 쿼리합니다. databaseId를 실제 값으로 변경하세요."
